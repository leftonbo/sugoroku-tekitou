{
  "name": "sugoroku-incremental-game",
  "version": "1.0.0",
  "description": "すごろくをテーマにしたインクリメンタル・放置ブラウザゲーム",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "concurrently \"tsc --watch\" \"serve . --single -p 3000\"",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:typecheck": "tsc --noEmit",
    "test:build": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "jsdom": "^26.1.0",
    "serve": "^14.2.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "private": true
}
